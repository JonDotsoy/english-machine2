---
import Layout from "./Layout.astro";
import MultiChoice from "../components/MultiChoice";

interface Props {
  db: any[];
  id: string;
  title: string;
}

// Props: db, id, title
const { db, id, title } = Astro.props;
---

<Layout>
  <h1 class="text-2xl font-bold text-center my-6">{title}</h1>
  <div class="max-w-2xl mx-auto">
    <MultiChoice client:load type={id} db={db} />
  </div>
  <footer class="mt-10 text-center text-sm text-gray-500">
    ¿Quieres mejorar o agregar ejemplos? <a href={`https://github.com/JonDotsoy/english-machine/blob/HEAD/src/dbs/${id}.json`} target="_blank" rel="noopener noreferrer" class="underline text-blue-600 hover:text-blue-800">Modifica los ejemplos aquí</a>.
  </footer>
</Layout>
