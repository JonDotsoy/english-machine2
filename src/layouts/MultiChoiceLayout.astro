---
import Layout from "./Layout.astro";
import MultiChoice from "../components/MultiChoice";

const base = import.meta.env.BASE_URL;

interface Props {
  db: any[];
  id: string;
  title: string;
}

// Props: db, id, title
const { db, id, title } = Astro.props;
---

<Layout>
  <header>
    <nav class="w-full py-4 px-4 bg-gray-100 border-b mb-4">
      <a href=`${base}` class="text-blue-600 hover:text-blue-800 font-semibold"
        >← Volver al inicio</a
      >
    </nav>
  </header>
  <div class="max-w-2xl mx-auto">
    <h1 class="text-2xl font-bold my-6" transition:name={id}>
      {title}
    </h1>
    <MultiChoice client:load type={id} db={db} />
  </div>
  <footer class="mt-10 text-center text-sm text-gray-500 container m-auto">
    ¿Quieres mejorar o agregar ejemplos? <a
      href={`https://github.com/JonDotsoy/english-machine/blob/HEAD/src/dbs/${id}.json`}
      target="_blank"
      rel="noopener noreferrer"
      class="underline text-blue-600 hover:text-blue-800"
      >Modifica los ejemplos aquí</a
    >.
  </footer>
</Layout>
