---
// Props: db, id, title
const { db, id, title } = Astro.props;
import Layout from "./Layout.astro";
import MultiChoice from "../components/MultiChoice";
---

<Layout>
  <h1 class="text-2xl font-bold text-center my-6">{title}</h1>
  <div class="max-w-2xl mx-auto">
    <MultiChoice client:load type={id} db={db} />
  </div>
</Layout>
